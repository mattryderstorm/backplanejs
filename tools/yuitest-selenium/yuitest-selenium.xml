<project name="yuitest-selenium" basedir=".">
	<description>
		Ant project for the YUITest/Selenium driver.
	</description>

	<dirname property="yuitest-selenium.base.dir" file="${ant.file.yuitest-selenium}" />

	<property file="${yuitest-selenium.base.dir}/ant.properties" />

	<target name="run-yuitest-selenium" depends="-check-selenium-rc">
		<!-- fail unless="selenium-rc.started" message="Selenium RC is not available. Either run 'ant start-selenium-rc' in a seperate console, or use 'ant test'." / -->

		<!-- fail message="Google App Engine is not available. Either run 'ant start-local-gae' in a seperate console, or use 'ant test'.">
			<condition>
				<not>
					<socket server="${gae.host}" port="${gae.port}" />
				</not>
			</condition>
		</fail -->

		<java
			classname="com.yahoo.platform.yuitest.selenium.YUITestSeleniumDriver"
			fork="true"
			failonerror="true"
		>
			<classpath>
				<pathelement location="${yuitest-selenium.base.dir}/yuitest-selenium-driver-0.4.4.jar"/>
				<pathelement location="${selenium-rc.base.dir}/selenium-java-client-driver.jar"/>
			</classpath>
    <!-- java
			jar="${yuitest-selenium.base.dir}/yuitest-selenium-driver-0.4.4.jar"
			fork="true"
			failonerror="true"
		-->
			<arg line="--host ${selenium-rc.host} --port ${selenium-rc.port} --resultsdir ${reports.dir} --tests ${test.list} --browsers ${selenium-rc.browsers}" />
		</java>
	</target>
</project>
