<project name="backplanejs" default="dist" basedir=".">
	<description>
		Ant project for various backplanejs tools.
	</description>

	<target name="load.properties">
		<property file="ant.properties" />
	</target>

	<target name="js.minify" depends="load.properties">
		<description>
			Minify the distribution.
		</description>

		<java
			classname="com.yahoo.platform.yui.compressor.YUICompressor"
			fork="true"
			failonerror="true"
		>
			<arg line="-o ${deploy.dir}/${dist.package.name}-min.js ${deploy.dir}/${product.name}.js" />
		</java>
	</target>
</project>
